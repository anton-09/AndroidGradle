<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5dip">

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_episode_number_layout"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_episode_number"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      style="@style/content_page_large_text"/>
            <TextView android:id="@+id/edit_episode_number"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      style="@style/content_page_large_text"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_episode_name_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_episode_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>

            <EditText
                android:id="@+id/edit_episode_name"
                style="@style/content_page_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_episode_alt_name_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_episode_alt_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>

            <EditText
                android:id="@+id/edit_episode_alt_name"
                style="@style/content_page_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_episode_release_date_layout"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_episode_release_date"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      style="@style/content_page_large_text"/>
            <TextView android:id="@+id/edit_episode_release_date"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:tag="valueView"
                      style="@style/content_page_large_text"/>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_episode_download_date_layout"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_episode_download_date"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      style="@style/content_page_large_text"/>
            <TextView android:id="@+id/edit_episode_download_date"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:tag="valueView"
                      style="@style/content_page_large_text"/>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_episode_watch_date_layout"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_episode_watch_date"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      style="@style/content_page_large_text"/>
            <TextView android:id="@+id/edit_episode_watch_date"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:tag="valueView"
                      style="@style/content_page_large_text"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
