<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5dip">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_serial_name_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_serial_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>

            <EditText
                android:id="@+id/edit_serial_name"
                style="@style/content_page_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_serial_alt_name_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_serial_alt_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>

            <EditText
                android:id="@+id/edit_serial_alt_name"
                style="@style/content_page_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_serial_column_number_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_serial_column_number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>
            <EditText android:id="@+id/edit_serial_column_number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="number"
                      android:maxLength="1"
                      style="@style/content_page_small_text"/>
        </LinearLayout>

        <CheckBox android:id="@+id/edit_serial_is_episode_with_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/edit_serial_is_episode_with_name"/>

        <CheckBox android:id="@+id/edit_serial_is_active"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/edit_serial_is_active"/>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_serial_release_studio_name_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_serial_release_studio_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>

            <EditText
                    android:id="@+id/edit_serial_release_studio_name"
                    style="@style/content_page_small_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="60dip"
                      android:id="@+id/edit_serial_translate_studio_name_layout"
                      android:clickable="false"
                      style="@style/list_item_single">

            <TextView android:text="@string/edit_serial_translate_studio_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/content_page_large_text"/>

            <EditText
                    android:id="@+id/edit_serial_translate_studio_name"
                    style="@style/content_page_small_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>