<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:minHeight="60dp">
            <TextView android:id="@+id/left_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/header_dark"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:tag="left"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:textSize="18sp"/>
            <TextView android:id="@+id/center_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/header_light"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:tag="center"
                    android:layout_weight="3"
                    android:width="0dp"
                    android:textSize="30sp"/>
            <TextView android:id="@+id/right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/header_dark"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:tag="right"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:textSize="18sp"/>
        </LinearLayout>
        <GridView
                android:id="@+id/grid_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:listSelector="@color/grid_highlight"/>
</LinearLayout>