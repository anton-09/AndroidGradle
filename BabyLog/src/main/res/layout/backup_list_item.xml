<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="10dp"
    style="@style/CardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listItemBackupDate"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/listItemBackupRowCount"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/listItemBackupDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/listItemBackupSize"
            android:layout_alignBottom="@+id/listItemBackupRowCount"
            android:layout_toLeftOf="@+id/buttonRestoreBackup"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_backup_restore_light"
            android:layout_toLeftOf="@+id/buttonDeleteBackup"
            android:layout_marginRight="10dp"
            android:id="@+id/buttonRestoreBackup"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete_light"
            android:layout_alignParentRight="true"
            android:id="@+id/buttonDeleteBackup"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>