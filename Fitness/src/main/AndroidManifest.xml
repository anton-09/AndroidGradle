<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.home.fitness" >

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MuscleActivity"
            android:label="@string/muscles"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.MuscleEditActivity"
            android:label="@string/muscle"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ExerciseActivity"
            android:label="@string/exercises"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ExerciseEditActivity"
            android:label="@string/exercise"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.WorkoutActivity"
            android:label="@string/workouts"
            android:screenOrientation="portrait"/>

         <activity
             android:name="ru.home.fitness.activities.WorkoutEditActivity"
             android:label="@string/workout"
             android:screenOrientation="portrait"/>

        <activity
            android:name="ru.home.fitness.activities.CalendarActivity"
            android:label="@string/calendar"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
